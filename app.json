{
  "expo": {
    "owner": "nativo-digital",
    "name": "betapos-mobile-app",
    "slug": "betapos-mobile-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/images/icon.png",
    "scheme": "betapos",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./src/assets/images/splash.png",
	  "resizeMode": "cover"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
    },
    "plugins": [
      "sentry-expo",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Permite que $(PRODUCT_NAME) use Face ID."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Permite que $(PRODUCT_NAME) acceda a tus fotos para poder cambiar tu foto de perfil o logo."
        }
      ]
    ],
    "experiments": {
      "tsconfigPaths": true
    },
    "hooks": {
      "postPublish": [
        {
          "file": "sentry-expo/upload-sourcemaps",
          "config": {
            "organization": "nativo-digital",
            "project": "beta-pos-mobile"
          }
        }
      ]
    }
  }
}
